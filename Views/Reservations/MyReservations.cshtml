@model IEnumerable<DeluxeHotelMVC.Models.Reservation>

@{
    ViewData["Title"] = "Rezervasyonlarım";
}

<style>
    body {
        background: linear-gradient(180deg, #f8f9fc, #eef1f7);
    }

    .glass {
        background: rgba(255,255,255,.75);
        backdrop-filter: blur(14px);
        border-radius: 22px;
        box-shadow: 0 18px 40px rgba(0,0,0,.12);
    }

    .title {
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    table {
        border-radius: 18px;
        overflow: hidden;
    }

    thead {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: #fff;
    }

        thead th {
            border: none;
            padding: 14px;
            font-weight: 600;
        }

    tbody tr {
        transition: .3s ease;
    }

        tbody tr:hover {
            background: rgba(102,126,234,.08);
        }

    td {
        padding: 14px;
        vertical-align: middle;
    }

    .status {
        background: linear-gradient(135deg, #20bf55, #01baef);
        color: #fff;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: .85rem;
        font-weight: 600;
        box-shadow: 0 6px 16px rgba(32,191,85,.35);
    }

    .btn-main {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        border-radius: 30px;
        padding: 10px 28px;
        font-weight: 600;
        color: #fff;
        box-shadow: 0 10px 25px rgba(102,126,234,.45);
        transition: .3s ease;
    }

        .btn-main:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 35px rgba(102,126,234,.6);
            color: #fff;
        }
</style>

<h2 class="text-center fw-bold mb-4 mt-4 display-6 title">
    Rezervasyonlarım
</h2>

@if (!Model.Any())
{
    <div class="glass p-5 text-center">
        <p class="text-muted fs-5 mb-3">
            Henüz bir rezervasyonunuz bulunmuyor.
        </p>
        <a href="/Rooms" class="btn btn-main">
            Oda Seç & Rezervasyon Yap
        </a>
    </div>
}
else
{
    <div class="glass p-4">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Oda</th>
                    <th>Giriş Tarihi</th>
                    <th>Çıkış Tarihi</th>
                    <th>Toplam Fiyat</th>
                    <th>Durum</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>
                            <b>@r.Room.RoomType.Name</b>
                        </td>

                        <td>@r.CheckInDate.ToString("dd MMM yyyy")</td>
                        <td>@r.CheckOutDate.ToString("dd MMM yyyy")</td>

                        <td>
                            <b class="text-success">
                                @r.TotalPrice ₺
                            </b>
                        </td>

                        <td>
                            <span class="status">
                                Onaylandı
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
