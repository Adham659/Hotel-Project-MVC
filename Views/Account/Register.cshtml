@model DeluxeHotelMVC.Models.User

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(180deg, #f8f9fc, #eef1f7) !important;
    }

    .register-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .register-card {
        width: 100%;
        max-width: 420px;
        background: rgba(255,255,255,.75);
        backdrop-filter: blur(14px);
        border-radius: 26px;
        padding: 45px 40px;
        box-shadow: 0 20px 45px rgba(0,0,0,.15);
        text-align: center;
    }

    .register-title {
        font-size: 26px;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 25px;
    }

    .form-control {
        border-radius: 14px;
        padding: 13px 16px;
        font-size: 15px;
        transition: .3s ease;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102,126,234,.15);
        }

    .btn-register {
        width: 100%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        padding: 13px;
        margin-top: 15px;
        border-radius: 30px;
        color: #fff;
        font-weight: 600;
        font-size: 16px;
        border: none;
        box-shadow: 0 10px 25px rgba(102,126,234,.45);
        transition: .3s ease;
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 35px rgba(102,126,234,.6);
            color: #fff;
        }

    .register-card a {
        color: #667eea;
        font-weight: 500;
        text-decoration: none;
    }

        .register-card a:hover {
            text-decoration: underline;
        }
</style>

<div class="register-wrapper">
    <div class="register-card">

        <h3 class="register-title">
            Kayıt Ol
        </h3>

        <!-- HATA MESAJI -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger text-start">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="Register" method="post">

            <input asp-for="FirstName"
                   class="form-control mb-3"
                   placeholder="Ad"
                   required />

            <input asp-for="LastName"
                   class="form-control mb-3"
                   placeholder="Soyad"
                   required />

            <input asp-for="Email"
                   class="form-control mb-3"
                   placeholder="E-posta"
                   required />

            <input asp-for="Phone"
                   class="form-control mb-3"
                   placeholder="Telefon"
                   required />

            <input asp-for="PasswordHash"
                   type="password"
                   class="form-control mb-3"
                   placeholder="Parola"
                   required />

            <button type="submit" class="btn btn-register">
                Kayıt Ol
            </button>

            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login">
                    Zaten hesabınız var mı? Giriş Yap
                </a>
            </div>

        </form>
    </div>
</div>
